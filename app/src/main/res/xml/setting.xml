<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <SwitchPreference
        android:defaultValue="true"
        android:key="dataCollectSwitch"
        android:title="采集数据" />

    <MultiSelectListPreference
        android:defaultValue="@array/parameter_values"
        android:key="parameter"
        android:entries="@array/parameter"
        android:entryValues="@array/parameter_values"
        android:title="设置采样参数"
        />



    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="10"
        android:inputType="number"
        android:key="stepLength"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="设置步长" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="20"
        android:entries="@array/frequency"
        android:entryValues="@array/frequency_values"
        android:key="frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="设置采样频率" />

</PreferenceScreen>
